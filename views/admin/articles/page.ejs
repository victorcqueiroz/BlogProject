<%- include('../../partials/header.ejs') %>

    <body>
        <%- include('../../partials/homenavbar.ejs') %>
            <div class="container">
                <hr>
                <% result.articles.rows.forEach(article=> { %>
                    <div class="card">
                        <div class="card-header">
                            <h2>
                                <%= article.title %>
                            </h2>
                        </div>
                        <div class="card-body">
                            <a href="/<%= article.slug %> " class="btn btn-primary">Ler artigo</a>
                        </div>
                    </div>
                    <br />
                    <% }) %>

                        <div class="row">
                            <div class="col col-12">
                                <% if (result.page > 2) { %>
                                    <a href="/articles/page/<%= result.page - 1 %> " class="btn btn-dark" style="float: left;"><< Previous</a>
                                 <% } else if (result.page == 2) { %>
                                    <a href="/" class="btn btn-dark" style="float: left;"><< Previous</a>
                                    <% } %>
                                 
                                
                                <% if (result.next) { %>
                                    <a href="/articles/page/<%= result.page + 1 %> " class="btn btn-dark" style="float: right;">Next >></a>
                                <% } %>
                                
                            </div>
                        </div>
                        <hr>

            </div>
    </body>

    <% include ('../../partials/footer.ejs') %>